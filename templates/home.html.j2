{% extends "layoutBase.html.j2" %}
{% block title %}Home{% endblock %}

{% block head %}
{{ super() }}
{% endblock %}

{% block content %}
<img id="left-curtain" src="{{url_for('static', filename='img/curtain1.jpg')}}" onclick="open_curtain()"/>
<img id="right-curtain" src="{{url_for('static', filename='img/curtain1.jpg')}}" onclick="open_curtain()"/>
<div class="text-center cover-container d-flex h-100 p-3 mx-auto flex-column">
    <header class="masthead mb-auto"></header>
    <main role="main" class="inner cover">
        <h1 class="cover-heading">Welcome to WRLDC Code Book Web Application</h1>
        <br/>
        <p class="lead">
            <a href="{{ url_for('codes.list') }}" class="btn btn-lg btn-primary">View Codes</a>
        </p>
    </main>
    <footer class="mastfoot mt-auto"></footer>
</div>
{% endblock %}

{% block scripts %}
<style>
html,
body {
  height: 100%;
}

.cover-container {
  display: -ms-flexbox;
  display: -webkit-box;
  display: flex;
  -ms-flex-pack: center;
  -webkit-box-pack: center;
  justify-content: center;
  text-shadow: 0 .05rem .1rem rgba(0, 0, 0, .8);
  max-width: 42em;
}


/*
 * Header
 */
.masthead {
  margin-bottom: 2rem;
}

/*
 * Cover
 */
.cover {
  padding: 0 1.5rem;
}
.cover .btn-lg {
  padding: .75rem 1.25rem;
  font-weight: 700;
}


/*
 * Footer
 */
.mastfoot {
  color: rgba(255, 255, 255, .5);
}

#left-curtain, #right-curtain{
  width: 50%;
  height: 100vh;
  position: absolute;
  top: 0;
  bottom: 0;
}

#left-curtain{
  left: 0;
  /*width: 0;*/
  width: 0;
}

#right-curtain{
  /**width: 0**/
  width: 0;
  right: 0;
}
</style>

<script>

jQuery(document).ready(function($) {
  // setup curtain close upon click
  document.getElementsByClassName("mr-2 d-none d-md-inline text-current")[0].onclick = closeCurtain;
});

function closeCurtain(){
  $("#left-curtain").width("50%");
  $("#right-curtain").width("50%");
}

function open_curtain(){
    $("#left-curtain").animate({width:0},1000);
    $("#right-curtain").animate({width:0},1000);
}
</script>
{% endblock %}  